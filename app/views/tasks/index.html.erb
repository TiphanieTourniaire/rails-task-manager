<h1>Your tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li>
  <%= link_to task.name, task_path(task) %> : <%= task.content %> (<%= task.done %>)
  <%= link_to "Delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure?"} %>
  <%= link_to "Update", edit_task_path(task) %>
  <%= link_to "Done", done_task_path(task),
  method: :put %>
</li>
<% end %>
</ul>

<%= link_to "Create", new_task_path %>
